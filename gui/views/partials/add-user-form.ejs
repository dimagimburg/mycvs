<div class="add-user" style="display:none;background: #595669;padding: 10px;color: #fff;border-bottom: 1px solid #767677;">
	<form id="add-user-form">
		<div class="form-group">
	    	<label for="add-user-username" style="font-weight: 400;">Username</label>
	    	<input type="text" class="form-control" id="add-user-username" placeholder="Username" required>
	  	</div>
	  	<div class="form-group">
	    	<label for="add-user-password" style="font-weight: 400;">Password</label>
	    	<input type="password" class="form-control" id="add-user-password" placeholder="Password" required>
	  	</div>
    	<button type="submit" class="btn btn-primary add-user-button" form="add-user-form" style="float:left;">Add user</button>
	  	<button type="button" class="btn btn-default cancel-add-user-button" style="float:right;">Cancel</button>
	  	<div style="clear:both;"></div>
	</form>
</div>