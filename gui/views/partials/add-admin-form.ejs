	    	<label for="add-admin-username" style="font-weight: 400;">Username</label>
	    	<input type="text" class="form-control" id="add-admin-username" placeholder="Username" required>
	  	</div>
	  	<div class="form-group">
	    	<label for="add-admin-password" style="font-weight: 400;">Password</label>
	    	<input type="password" class="form-control" id="add-admin-password" placeholder="Password" required>
	  	</div>
    	<button type="submit" class="btn btn-primary add-admin-button" form="add-admin-form" style="float:left;">Add admin</button>
